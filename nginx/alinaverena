server {
  server_name               .alinaverena.codes;
  listen                    80;
  return                    307 https://$host$request_uri;
}

server {
  location / {
    proxy_pass              http://localhost:8000;
    proxy_set_header        Host $host;
  }

  location /static {
    autoindex on;
    alias /var/www/alinaverena.com/static/;
  }

  location /static {
    autoindex on;
    alias /var/www/alinaverena.com/media/;
  }

  listen 443 ssl;
  ssl_certificate /etc/letsencrypt/live/www.alinaverena.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/www.alinaverena.com/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
